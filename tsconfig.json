{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/**/*": [
        "./src/*"
      ]
    },
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": [
      "node",
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
  ]
}